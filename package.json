{
  "name": "cardmass",
  "version": "1.14.0",
  "private": true,
  "scripts": {
    "dev": "npm run version:patch && NEXT_CACHE_DIR=/tmp/cardmass-next-cache next dev -p 6000",
    "dev:turbo": "npm run version:patch && NEXT_CACHE_DIR=/tmp/cardmass-next-cache next dev --turbopack -p 6000",
    "build": "NEXT_CACHE_DIR=/tmp/cardmass-next-cache next build",
    "start": "next start -p 6000",
    "lint": "eslint .",
    "db:purge": "node scripts/purge-db.mjs",
    "version:check": "node scripts/sync-version-timestamps.mjs --check",
    "version:sync": "node scripts/sync-version-timestamps.mjs",
    "version:patch": "node scripts/sync-version-timestamps.mjs --patch",
    "version:minor": "node scripts/sync-version-timestamps.mjs --minor",
    "version:major": "node scripts/sync-version-timestamps.mjs --major",
    "hooks:install": "bash scripts/install-hooks.sh"
  },
  "dependencies": {
    "dotenv": "^16",
    "jose": "^5.10.0",
    "mongodb": "^6",
    "next": "15.5.9",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
